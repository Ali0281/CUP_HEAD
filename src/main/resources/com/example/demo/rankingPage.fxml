<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@style.css" fx:id="pane" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.View.sceneController.RankingPageController">

    <top>
        <VBox alignment="CENTER" stylesheets="@style.css">
            <Text fill="6f0b70" text="profile" textAlignment="CENTER" wrappingWidth="214.0625">
                <font>
                    <Font size="67.0"/>
                </font>
            </Text>
        </VBox>
    </top>

    <center>
        <VBox fx:id="score" alignment="CENTER" maxWidth="350.0" prefHeight="311.0" prefWidth="235.0" spacing="10">
            <children>
                <Text fill="6f0b70" text="score"/>
            </children>
        </VBox>
    </center>
    <right>
        <VBox fx:id="time" alignment="CENTER" prefHeight="309.0" prefWidth="200.0" spacing="10"
              BorderPane.alignment="CENTER">
            <children>
                <Text fill="6f0b70" text="time"/>
            </children>
        </VBox>
    </right>
    <left>
        <VBox fx:id="username" alignment="CENTER" prefHeight="309.0" prefWidth="200.0" spacing="10"
              BorderPane.alignment="CENTER">
            <children>
                <Text fill="6f0b70" text="username"/>
            </children>
        </VBox>
    </left>


    <bottom>
        <VBox alignment="CENTER" stylesheets="@style.css">
            <Text fill="6f0b70" text="created by : Ali Aghayari" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font size="32.0"/>
                </font>
            </Text>
        </VBox>
    </bottom>
</BorderPane>
